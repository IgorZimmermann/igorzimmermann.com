{
  "kind": "collectionType",
  "collectionName": "homepage_grid_items",
  "info": {
    "singularName": "homepage-grid-item",
    "pluralName": "homepage-grid-items",
    "displayName": "Homepage Grid Item"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "homepage.decorative",
        "homepage.event-list",
        "homepage.image",
        "homepage.media",
        "homepage.header"
      ],
      "required": true
    },
    "width": {
      "type": "enumeration",
      "required": true,
      "default": "half",
      "enum": [
        "half",
        "full"
      ]
    }
  }
}
